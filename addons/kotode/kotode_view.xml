      <field name="model">kotode.status_log</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="4">
              <field name="jelzes"/>
              <field name="datum"/>
              <field name="uzem"/>
              <field name="gepazonosito"/>
              <field name="gep"/>
              <field name="muszak"/>
