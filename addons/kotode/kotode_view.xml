                  string="Tegnap" help="Tegnap rögzített adatok"/>
          <filter domain="[('datum','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59))),
                           ('datum','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"
