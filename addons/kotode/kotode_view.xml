    <record id="view_tree_kotogep_log"    model="ir.ui.view">
      <field  name="name">Kötőgép log Tree</field>
      <field  name="model">kotode.kotogep_log</field>
      <field  name="arch" type="xml">
        <tree>
          <field name="jelzes"/>
