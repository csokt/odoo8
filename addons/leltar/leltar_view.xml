<?xml version="1.0"?>
<openerp>
  <data>
    <!--####################################################################################################################  Parameter  -->
    <record id="view_tree_leltar_import"    model="ir.ui.view">
      <field  name="name">Leltár Import Tree</field>
      <field  name="model">szefo.parameter</field>
      <field  name="arch" type="xml">
        <tree create="false" >
          <button name="import_netto_ertek"   type="object" string="Nettó érték import"       class="oe_highlight" confirm="Könyv szerinti nettó érték importja DominoSoftból" />
          <button name="import_eszkoz"        type="object" string="Eszközök import"          class="oe_highlight" confirm="Tárgyi eszközök importja DominoSoftból" />
          <button name="import_gyartasi_szam" type="object" string="Gyártási szám import"     class="oe_highlight" confirm="Gyártási szám import DominoSoftból" />
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_leltariv_admin"    model="ir.ui.view">
      <field  name="name">Leltárív Tree</field>
      <field  name="model">szefo.parameter</field>
      <field  name="arch" type="xml">
        <tree create="false" >
          <button name="leltariv_generalas"   type="object" string="Leltárív generálás"       class="oe_highlight" confirm="Leltárívek generálása" />
          <button name="leltar_lezaras"       type="object" string="Leltár lezárás"           class="oe_highlight" confirm="Leltárnak vége, leltárívek könyvelése" />
        </tree>
      </field>
    </record>

    <!--####################################################################################################################  Leltár körzet  -->
    <record id="view_form_leltar_korzet"    model="ir.ui.view">
      <field  name="name">Leltár körzet Form</field>
      <field  name="model">leltar.korzet</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <form>
          <group col="4">
            <field name="leltarkorzet_kod"/>
            <field name="leltarfelelos_id"/>
            <field name="telephely_id"/>
            <field name="szobaszam"/>
            <field name="megnevezes"/>
            <field name="zarolva"/>
            <field name="leltarozni"/>
            <field name="ds_leltarkorzet"/>
            <field name="ds_korzet_vonalkod"/>
            <field name="active"/>
          </group>
          <div>
            <field name="eszkozok_ids"/>
          </div>
        </form>
      </field>
    </record>

    <record id="view_tree_leltar_korzet"    model="ir.ui.view">
      <field  name="name">Leltár körzet Tree</field>
      <field  name="model">leltar.korzet</field>
      <field  name="arch" type="xml">
        <tree>
          <field  name="name"/>
          <field  name="leltarozni"/>
          <button name="leltarozni_valt"      string="Igen/Nem"       type="object" class="oe_highlight"      groups="leltar.group_leltar_manager"/>
          <field  name="leltarfelelos_id"/>
          <field  name="zarolva"/>
          <button name="zarolva_valt"         string="Nyit/Zár"         type="object" class="oe_highlight"      groups="leltar.group_leltar_manager"/>
        </tree>
      </field>
    </record>

    <!--####################################################################################################################  Leltár szett  -->
    <record id="view_form_leltar_szett"    model="ir.ui.view">
      <field  name="name">Leltár szett Form</field>
      <field  name="model">leltar.szett</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <form>
          <div>
            <button type="object" name="szett_eszkoz_mozgas" string="Szett eszközök mozgatása" confirm="A szettben lévő eszközök átmozgatása a szett raktárkörzetébe."
              class="oe_highlight" attrs="{'invisible':  [('count_korzet_elter','=',0)]}"/>
            <button type="object" name="szett_eszkoz_hasznal" string="Szett eszközök személyes használatra" confirm="A szettben lévő eszközök személyes használatba vétele."
              class="oe_highlight" attrs="{'invisible':  [('count_hasznalo_elter','=',0)]}"/>
          </div>
          <group col="4">
            <field name="name"/>
            <field name="leltarkorzet_id"       options="{'no_create': True, 'no_open': True}"/>
            <field name="hasznalo_id"           options="{'no_create': True, 'no_open': True}"/>
            <field  name="megjegyzes"/>
            <field name="count_korzet_elter"    invisible="1"/>
            <field name="count_hasznalo_elter"  invisible="1"/>
          </group>
          <div>
            <field name="eszkozok_ids"/>
          </div>
        </form>
      </field>
    </record>

    <record id="view_tree_leltar_szett"    model="ir.ui.view">
      <field  name="name">Leltár szett Tree</field>
      <field  name="model">leltar.szett</field>
      <field  name="arch" type="xml">
        <tree>
          <field  name="name"/>
          <field  name="leltarkorzet_id"/>
          <field  name="hasznalo_id"/>
          <field  name="megjegyzes"/>
          <field  name="count_korzet_elter"/>
          <field  name="count_hasznalo_elter"/>
        </tree>
      </field>
    </record>

    <record id="view_filter_leltar_szett"    model="ir.ui.view">
      <field  name="name">Leltár szett Filter</field>
      <field  name="model">leltar.szett</field>
      <field  name="arch" type="xml">
        <search>
          <field  name="name"/>
          <field  name="leltarkorzet_id"/>
          <filter string="Leltárkörzet eltér" domain="[('count_korzet_elter','>',0)]"/>
          <filter string="Felhasználó eltér" domain="[('count_hasznalo_elter','>',0)]"/>
        </search>
      </field>
    </record>

    <!--####################################################################################################################  Tárgyi eszköz  -->
    <record id="view_form_leltar_eszkoz"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz Form</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <form>
          <group col="4">
            <field name="leltari_szam"          attrs="{'readonly': [('idegen_e','!=',True)]}"/>
            <field name="megnevezes"            attrs="{'readonly': [('idegen_e','!=',True)]}"/>
            <field name="name"                  />
            <field name="leltarcsoport_id"      readonly="0"    options="{'no_create': True, 'no_open': True}"/>
            <field name="akt_leltarkorzet_id"   readonly="0"    options="{'no_create': True, 'no_open': True}"    attrs="{'readonly': [('idegen_e','!=',True)]}"/>
            <field name="akt_hasznalo_id"       readonly="1"/>
            <field name="tulajdonsag_ids"       widget="many2many_tags"/>
            <field name="csoportkod"            readonly="1"/>
            <field name="szett_id"              options="{'no_create': True, 'no_open': True}"/>
            <field name="hivszam"               readonly="1"/>
            <field name="megjegyzes"/>
            <field name="leltari_szam_vonalkod" readonly="1"/>
            <field name="gyartasi_szam"         attrs="{'readonly': [('idegen_e','!=',True)]}"/>
            <field name="leltarkorzet_kod"      readonly="1"/>
            <field name="netto_ertek"           readonly="1"/>
            <field name="ds_leltarkorzet"       readonly="1"/>
            <field name="selejtezni"            readonly="1"    string=""/>
            <field name="ds_leltarfelelos"      readonly="1"/>
            <field name="selejt_ok"             readonly="1"/>
            <field name="idegen_e"              readonly="1"/>
            <field name="zarolva"               groups="leltar.group_leltar_manager"/>
            <field name="active"                groups="leltar.group_leltar_manager"      attrs="{'readonly': [('idegen_e','!=',True)]}"/>
          </group>
          <div>
            <field name="mozgas_ids"            readonly="1"/>
            <field name="atvetel_ids"           readonly="1"/>
          </div>
        </form>
      </field>
    </record>

    <record id="view_tree_leltar_eszkoz"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz Tree</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <tree create="false">
          <field name="leltari_szam"/>
          <field name="megnevezes"/>
          <field name="gyartasi_szam"/>
          <field name="leltarcsoport_id"/>
          <field name="akt_leltarkorzet_id"/>
          <field name="akt_hasznalo_id"/>
          <field name="megjegyzes"/>
          <field name="tulajdonsag_ids"       widget="many2many_tags"/>
          <field name="idegen_e"/>
          <field name="selejtezni"/>
          <field name="zarolva"/>
          <button name="zarolva_valt"         string="Nyit/Zár"         type="object" class="oe_highlight"      groups="leltar.group_leltar_manager"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkoz_szett"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz szett Tree</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="arch" type="xml">
        <tree editable="top">
          <field name="leltari_szam"          readonly="1"/>
          <field name="megnevezes"            readonly="1"/>
          <field name="gyartasi_szam"         readonly="1"/>
          <field name="leltarcsoport_id"      readonly="1"/>
          <field name="akt_leltarkorzet_id"   readonly="1"/>
          <field name="megjegyzes"            readonly="1"/>
          <field name="tulajdonsag_ids"       readonly="1"    widget="many2many_tags"/>
          <field name="szett_id"              options="{'no_create': True}"/>
        </tree>
      </field>
    </record>
<!--
          <button name="selejtezni_valt" type="object" string="Selejtezni" class="oe_highlight" />
-->

    <record id="view_tree_leltar_eszkoz_selejt_jelol"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz selejt jelöl Tree</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="arch" type="xml">
        <tree editable="top">
          <field name="leltari_szam"          readonly="1"/>
          <field name="megnevezes"            readonly="1"/>
          <field name="gyartasi_szam"         readonly="1"/>
          <field name="leltarcsoport_id"      readonly="1"/>
          <field name="akt_leltarkorzet_id"   readonly="1"/>
          <field name="megjegyzes"            readonly="1"/>
          <field name="tulajdonsag_ids"       readonly="1"    widget="many2many_tags"/>
          <field name="netto_ertek"           readonly="1"/>
          <field name="selejt_ok"/>
          <field name="selejtezni"            readonly="1"/>
          <field name="active"                invisible="1"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkoz_selejtez"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz selejtez Tree</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="arch" type="xml">
        <tree create="false">
          <field  name="leltari_szam"/>
          <field  name="megnevezes"/>
          <field  name="gyartasi_szam"/>
          <field  name="leltarcsoport_id"/>
          <field  name="akt_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
          <field  name="tulajdonsag_ids"      widget="many2many_tags"/>
          <field  name="netto_ertek"/>
          <field  name="selejt_ok"/>
          <field  name="not_active"           string=""/>
          <button name="do_toggle_active"     type="object" string="Selejtez" class="oe_highlight" />
        </tree>
      </field>
    </record>

    <record id="view_filter_leltar_eszkoz"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz Filter</field>
      <field  name="model">leltar.eszkoz</field>
      <field  name="arch" type="xml">
        <search>
          <field  name="name"/>
          <field  name="akt_hasznalo_id"/>
          <field  name="akt_leltarkorzet_id"/>
          <field  name="tulajdonsag_ids"/>
          <filter name="filter_sajat"     string="Saját eszköz"               domain="[('idegen_e','!=',True)]"/>
          <filter name="filter_idegen"    string="Idegen eszköz"              domain="[('idegen_e','=',True)]"/>
          <separator/>
          <filter name="filter_szamtech"  string="Számítástechnika"           domain="[('csoportkod','=','005')]"/>
        </search>
      </field>
    </record>

    <!--####################################################################################################################  Tárgyi eszköz mozgás  -->
    <record id="view_tree_leltar_eszkozmozgas"    model="ir.ui.view">
      <field  name="name">Eszközmozgás Tree</field>
      <field  name="model">leltar.eszkozmozgas</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <tree>
          <field  name="id"/>
          <field  name="eszkoz_id"/>
          <field  name="hova_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
          <field  name="megerkezett"/>
          <field  name="create_uid"             string="Felvette"/>
          <field  name="create_date"            string="Felvétel ideje"/>
          <field  name="write_uid"              string="Módosította"/>
          <field  name="write_date"             string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkoz_ujmozgas"    model="ir.ui.view">
      <field  name="name">Eszköz újmozgás Tree</field>
      <field  name="model">leltar.eszkozmozgas</field>
      <field  name="arch" type="xml">
        <tree edit="false" editable="top">
          <field  name="id"/>
          <field  name="eszkoz_id"              options="{'no_create': True}"/>
          <field  name="honnan_leltarkorzet_id"/>
          <field  name="hova_leltarkorzet_id"   options="{'no_create': True}"/>
          <field  name="megjegyzes"/>
          <field  name="megerkezett"            readonly="1"/>
          <field  name="create_uid"             readonly="1" string="Felvette"/>
          <field  name="create_date"            readonly="1" string="Felvétel ideje"/>
          <field  name="write_uid"              readonly="1" string="Módosította"/>
          <field  name="write_date"             readonly="1" string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkozerkezes"    model="ir.ui.view">
      <field  name="name">Eszközérkezés Tree</field>
      <field  name="model">leltar.eszkozmozgas</field>
      <field  name="arch" type="xml">
        <tree create="false">
          <field  name="eszkoz_id"/>
          <field  name="hova_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
          <field  name="megerkezett"            string=""/>
          <button name="megerkezett_valt"       string="Megérkezett"            type="object" class="oe_highlight" />
          <field  name="write_uid"              string="Módosította"/>
          <field  name="write_date"             string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkozmozgas_sztorno"    model="ir.ui.view">
      <field  name="name">Eszközmozgás Sztornó Tree</field>
      <field  name="model">leltar.eszkozmozgas</field>
      <field  name="arch" type="xml">
        <tree create="false">
          <field  name="eszkoz_id"/>
          <field  name="hova_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
          <field  name="megerkezett"            string=""/>
          <button name="sztorno"                string="Sztornó"                type="object" class="oe_highlight" />
          <field  name="write_uid"              string="Módosította"/>
          <field  name="write_date"             string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_filter_leltar_eszkozmozgas"    model="ir.ui.view">
      <field  name="name">Eszközmozgás Filter</field>
      <field  name="model">leltar.eszkozmozgas</field>
      <field  name="arch" type="xml">
        <search>
          <field  name="eszkoz_id"/>
          <field  name="honnan_leltarkorzet_id"/>
          <field  name="hova_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
        </search>
      </field>
    </record>

    <!--####################################################################################################################  Leltárkörzet mozgás  -->
    <record id="view_tree_leltar_korzetmozgas"    model="ir.ui.view">
      <field  name="name">Körzet újmozgás Tree</field>
      <field  name="model">leltar.korzetmozgas</field>
      <field  name="arch" type="xml">
        <tree edit="false" editable="top">
          <field  name="id"/>
          <field  name="honnan_leltarkorzet_id"/>
          <field  name="hova_leltarkorzet_id"/>
          <field  name="megjegyzes"/>
        </tree>
      </field>
    </record>

    <!--####################################################################################################################  Tárgyi eszköz átvétel  -->
    <record id="view_tree_leltar_eszkozatvetel"    model="ir.ui.view">
      <field  name="name">Eszközátvétel Tree</field>
      <field  name="model">leltar.eszkozatvetel</field>
      <field  name="arch" type="xml">
        <tree edit="false" editable="top">
          <field  name="id"/>
          <field  name="eszkoz_id"/>
          <field  name="regi_hasznalo_id"/>
          <field  name="uj_hasznalo_id"/>
          <field  name="megjegyzes"/>
          <field  name="hr_bevette"             readonly="1"/>
          <field  name="create_uid"             readonly="1" string="Felvette"/>
          <field  name="create_date"            readonly="1" string="Felvétel ideje"/>
          <field  name="write_uid"              readonly="1" string="Módosította"/>
          <field  name="write_date"             readonly="1" string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_tree_leltar_eszkozatvetel_hr"    model="ir.ui.view">
      <field  name="name">Eszközátvétel Tree</field>
      <field  name="model">leltar.eszkozatvetel</field>
      <field  name="arch" type="xml">
        <tree>
          <field  name="id"/>
          <field  name="eszkoz_id"/>
          <field  name="regi_hasznalo_id"/>
          <field  name="uj_hasznalo_id"/>
          <field  name="megjegyzes"/>
          <field  name="hr_bevette"             string=""/>
          <button name="hr_bevette_valt"        string="HR bevette"            type="object"/>
          <field  name="create_uid"             string="Felvette"/>
          <field  name="create_date"            string="Felvétel ideje"/>
          <field  name="write_uid"              string="Módosította"/>
          <field  name="write_date"             string="Módosítás ideje"/>
        </tree>
      </field>
    </record>

    <record id="view_filter_leltar_eszkozatvetel"    model="ir.ui.view">
      <field  name="name">Eszközátvétel Filter</field>
      <field  name="model">leltar.eszkozatvetel</field>
      <field  name="arch" type="xml">
        <search>
          <field  name="eszkoz_id"/>
          <field  name="uj_hasznalo_id"/>
          <field  name="megjegyzes"/>
        </search>
      </field>
    </record>

    <!--####################################################################################################################  Tárgyi eszköz felmérés  -->
    <record id="view_tree_leltar_leltar"    model="ir.ui.view">
      <field  name="name">Tárgyi eszköz felmérés Tree</field>
      <field  name="model">leltar.leltar</field>
      <field  name="arch" type="xml">
        <tree create="false">
          <field  name="eszkoz_id"/>
          <field  name="leltarkorzet_id"/>
          <field  name="hivszam"/>
          <field  name="targyev"/>
          <field  name="targyho"/>
          <field  name="leltari_szam"/>
          <field  name="leltari_szam_vonalkod"/>
          <field  name="leltarkorzet_vonalkod"/>
          <field  name="szobaszam"/>
          <field  name="ervenyesseg_kezdete"/>
        </tree>
      </field>
    </record>

    <!--####################################################################################################################  Vonalkód olvasás  -->
    <record id="view_form_leltar_vonalkodolvas"    model="ir.ui.view">
      <field  name="name">Vonalkód olvasás Form</field>
      <field  name="model">leltar.vonalkodolvas</field>
      <field  name="priority" eval="15"/>
      <field  name="arch" type="xml">
        <form create="false" edit="false">
          <group col="4">
            <field name="id"/>
            <field name="create_uid" string="Felvette"/>
            <field name="leltarkorzet_id"/>
            <field name="create_date" string="Felvétel ideje"/>
          </group>
          <b>Új eszközök</b>
          <field name="uj_eszkoz_ids"/>
          <b>Ellenőrzésre váró eszközök</b>
          <field name="ell_eszkoz_ids"/>
          <b>Adatfelvételkor leltárkörzetbe tartozó eszközök</b>
          <field name="akt_eszkoz_ids"/>
        </form>
      </field>
    </record>

    <record id="view_form_leltar_vonalkodolvas_felvesz"    model="ir.ui.view">
      <field  name="name">Vonalkód olvasás Form adatfelvétel</field>
      <field  name="model">leltar.vonalkodolvas</field>
      <field  name="arch" type="xml">
        <form edit="false">
          <div>
            <button type="object" name="do_mass_insert_mozgas" string="Eszközmozgás(ok) rögzítése" class="oe_highlight" attrs="{'invisible':  [('leltar','=',True)]}"/>
            <button special="cancel"  string="Elvetés" attrs="{'invisible':  [('leltar','=',True)]}"/>
          </div>
          <group col="4">
            <field name="vonalkod"/>
            <field name="leltarkorzet_id" readonly="1"/>
            <field name="vonalkod_save" readonly="1"/>
            <field name="eszkoz_id" readonly="1"/>
            <field name="uzenet" readonly="1"/>
            <field name="akt_leltarkorzet_id" readonly="1"/>
            <field name="leltar" invisible="1"/>
          </group>
          <b>Új eszközök</b>
          <field name="uj_eszkoz_ids"  options="{'no_create': True}"/>
          <b attrs="{'invisible':  [('leltar','!=',True)]}">Ellenőrzésre váró eszközök</b>
          <field name="ell_eszkoz_ids" options="{'no_create': True}" attrs="{'invisible':  [('leltar','!=',True)]}"/>
          <field name="akt_eszkoz_ids" invisible="1"/>
        </form>
      </field>
    </record>

    <record id="view_tree_leltar_vonalkodolvas"    model="ir.ui.view">
      <field  name="name">Vonalkód olvasás Tree</field>
      <field  name="model">leltar.vonalkodolvas</field>
      <field  name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="leltarkorzet_id"/>
          <field name="create_uid" string="Felvette"/>
          <field name="create_date" string="Felvétel ideje"/>
        </tree>
      </field>
    </record>

    <!--####################################################################################################################  Leltárív  -->
    <record id="view_form_leltariv"    model="ir.ui.view">
      <field  name="name">Leltárív Form</field>
      <field  name="model">leltar.leltariv</field>
      <field  name="priority" eval="15"/>
