<openerp>
<data>

<record id="mrp_production_form_view" model="ir.ui.view">
    <field name="name">usability.mrp.production.form</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
        <button name="button_cancel" position="attributes">
            <attribute name="confirm">Gyártás megszakítása. Biztos ezt akarod?</attribute>
            <attribute name="groups">raktar.group_raktar_admin</attribute>
        </button>
        <button name="action_cancel" position="attributes">
            <attribute name="confirm">Gyártás megszakítása. Biztos ezt akarod?</attribute>
            <attribute name="groups">raktar.group_raktar_admin</attribute>
        </button>
        <field name="date_start" position="attributes">
            <attribute name="invisible">0</attribute>
        </field>
        <field name="date_finished" position="attributes">
            <attribute name="invisible">0</attribute>
        </field>
    </field>
</record>

<record id="view_picking_form" model="ir.ui.view">
    <field name="name">stock_usability.view_picking_form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="arch" type="xml">
        <button name="action_cancel" position="attributes">
            <attribute name="confirm">Átvitel megszakítása. Biztos ezt akarod?</attribute>
            <attribute name="groups">raktar.group_raktar_admin</attribute>
        </button>
    </field>
</record>

<record id="view_move_form" model="ir.ui.view">
    <field name="name">stock.usability.stock.move.form</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_form" />
    <field name="arch" type="xml">
        <field name="picking_id" position="after">
            <field name="production_id"/>
            <field name="raw_material_production_id"/>
        </field>
    </field>
</record>

</data>
</openerp>
